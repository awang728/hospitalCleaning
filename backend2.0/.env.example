# Copy this to .env and fill in your values
# Never commit .env to git

# ── Sphinx AI ─────────────────────────────────────────────────────────────────
SPHINX_API_KEY=your_sphinx_api_key_here
SPHINX_BASE_URL=https://api.sphinx-ai.io/v1

# ── Actian VectorAI DB ────────────────────────────────────────────────────────
# When running locally:         localhost
# When running on Vultr server: 127.0.0.1  (same machine as Flask)
# When running in Docker:       vectorai   (service name in docker-compose)
VECTORAI_HOST=localhost
VECTORAI_PORT=50051
VECTORAI_COLLECTION=cleansight_sessions

# ── Flask ─────────────────────────────────────────────────────────────────────
PORT=8080
